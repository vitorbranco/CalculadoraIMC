<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        tools:context=".ResultActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Seu IMC é:"
            android:textAlignment="center"
            android:textColor="#3949AB"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/text_view_result2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="#262626"
            android:textSize="38sp"
            android:textStyle="bold"
            tools:text="27.10" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/imc_result_small"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_classificacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="#383838"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            tools:text="Classificação: Normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Confira a tabela de classificação do IMC:"
            android:textAlignment="center"
            android:textColor="#272727"
            android:textSize="18sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:stretchColumns="1"
            android:textAlignment="center">

            <TableRow>

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="Abaixo de 18.5"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Abaixo do peso"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="18.5 a 24.9"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Normal"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="25.0 a 29.9"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Sobrepeso"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="30.0 a 34.9"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Obesidade - Classe I"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="35.0 a 39.9"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Obesidade - Classe II"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="6dp"
                    android:text="Acima de 40.0"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />

                <TextView
                    android:background="@drawable/border_table"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Obesidade - Classe III"
                    android:textAlignment="center"
                    android:textColor="#383838"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>

